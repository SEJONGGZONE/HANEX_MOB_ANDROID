                app:scale_top="8"
                app:scale_textsize="5"
                android:text="현재\n1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/nanumgothicbold"
