                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                app:scale_width="55"
                app:scale_height="15"
                app:scale_left="5"
                app:scale_top="8"
                app:scale_textsize="4"
                />
            <TextView
                android:id="@+id/tvInfo17"
                android:layout_width="wrap_content"
